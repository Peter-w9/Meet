<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#F6BEC8">
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerInParent="true"
            android:src="@drawable/meet1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/rate"
                android:layout_width="285dp"
                android:layout_height="255dp"
                android:background="@drawable/rate">
            </ImageView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--昵称编辑-->
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/nickname"
                        android:layout_marginLeft="19dp"
                        android:text="Nickname: "
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_gravity="bottom"
                        android:id="@+id/nickname_editText"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="275dp"
                    android:layout_height="1dp"
                    android:background="#ABABAB"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"></LinearLayout>
                <!--密码框-->
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/password"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password: "
                        android:textSize="18dp"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_gravity="bottom"
                        android:id="@+id/password_editText"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:background="@null"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="275dp"
                    android:layout_height="1dp"
                    android:background="#ABABAB"></LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:id="@+id/edi"
                android:hint="Please enter your phone number"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/get_code"
                    android:layout_width="155dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bt"
                    android:text="Get code"
                    android:textAllCaps="false"
                    android:textSize="13dp"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="1dp"/>
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/get_code2"
                    android:layout_width="155dp"
                    android:layout_height="40dp"
                    android:background="@drawable/gray"
                    android:text="Get code"
                    android:textAllCaps="false"
                    android:textSize="13dp"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="1dp"/>
            </FrameLayout>

            <EditText
                android:id="@+id/edi2"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:hint="Please enter a verification code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/submit_code"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:text="Post code"
                android:textAllCaps="false"
                android:textSize="13dp"
                android:textColor="#ffffff"
                android:background="@drawable/bt"
                android:layout_width="155dp" />
            
            <LinearLayout
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#A2CFDD"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#F6BEC8"></LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>